default_platform(:mac)

platform :mac do
    before_all do
      setup_circle_ci
    end

    desc "ad-hoc build"
    lane :adhoc do
      match(type: "adhoc", readonly: true)
    end

    desc "development build"
    lane :development do
      match(type: "development")
    end
end
